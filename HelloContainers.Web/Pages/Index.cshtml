@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Hello Containers</h1>
</div>
<div class="card-group">
    @for (int i = 0; i < Model.WeatherItems.Length; i++)
    {
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">Date : @Model.WeatherItems[i].Date.ToShortDateString()</h5>
                <p class="card-text"><small class="text-muted">Temperature : @Model.WeatherItems[i].TemperatureC</small></p>
                <p class="card-text"><small class="text-muted">Temperature : @Model.WeatherItems[i].Summary</small></p>
            </div>
        </div>
    }
</div>